<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Smart_gym" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppBar.Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/color_both_1</item>
    </style>


    <style name="Theme.Smart_gym.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Smart_gym.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Smart_gym.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HeaderTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_both_1</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:layout_width">@dimen/layout_with_295dp</item>
        <item name="android:layout_height">@dimen/layout_height_29dp</item>
        <item name="android:layout_marginTop">@dimen/margin_top_54dp</item>

    </style>


    <style name="HeaderTextStyleCollapsed" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_both_1</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="Header2TextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_both_1</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <!--        <item name="android:layout_width">@dimen/layout_with_295dp</item>-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/layout_height_29dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_side_20dp</item>
        <item name="android:layout_marginStart">@dimen/margin_side_20dp</item>
    </style>


    <style name="ScriptTextStyle">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <!--        <item name="android:layout_width">@dimen/layout_with_295dp</item>-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_8dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_side_20dp</item>
        <item name="android:layout_marginStart">@dimen/margin_side_20dp</item>

    </style>

    <style name="MessageTextStyle">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <!--        <item name="android:layout_width">@dimen/layout_with_295dp</item>-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_10dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_side_20dp</item>
        <item name="android:layout_marginStart">@dimen/margin_side_20dp</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/layout_height_50dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_side_20dp</item>
        <item name="android:layout_marginStart">@dimen/margin_side_20dp</item>
        <item name="android:paddingStart">@dimen/padding_start_20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ButtonStyle2">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/layout_height_50dp</item>
        <item name="android:paddingStart">@dimen/padding_start_20dp</item>
        <item name="android:paddingEnd">@dimen/padding_start_20dp</item>
        <item name="android:textColor">@color/color_both_1</item>
        <item name="background">@drawable/btn_round_gym_create</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="MenuButtonStyle">
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_both_1</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right_gray</item>
        <item name="backgroundTint">@color/color_both_2</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="PostButtonStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_both_1</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="backgroundTint">@color/color_both_2</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/layout_height_50dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_side_20dp</item>
        <item name="android:layout_marginStart">@dimen/margin_side_20dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:background">@drawable/edt_round_black</item>
        <item name="android:alpha">@integer/alpha_40</item>
        <item name="android:paddingStart">@dimen/padding_start_20dp</item>

    </style>

    <style name="EditTextStyle2">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/layout_height_50dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:background">@drawable/edt_round_black</item>
        <item name="android:alpha">@integer/alpha_40</item>
        <item name="android:paddingStart">@dimen/padding_20dp</item>
        <item name="android:paddingEnd">@dimen/padding_20dp</item>
        <item name="android:paddingTop">@dimen/padding_10dp</item>
        <item name="android:paddingBottom">@dimen/padding_10dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/item_round_all_white_radius_20dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_side_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_side_20dp</item>
    </style>





    <dimen name="margin_top_8dp">8dp</dimen>
</resources>