<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginEmailSentActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_email_sent_success"
        app:layout_constraintBottom_toBottomOf="@+id/tvEmailSent"
        app:layout_constraintEnd_toStartOf="@+id/tvEmailSent"
        app:layout_constraintTop_toTopOf="@+id/tvEmailSent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvEmailSent"
        style="@style/HeaderTextStyle"
        android:layout_height="@dimen/layout_height_29dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="52dp"
        android:text="@string/login_email_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEmailSentScript"
        style="@style/ScriptTextStyle"
        android:layout_marginStart="60dp"
        android:layout_marginTop="7dp"
        android:text="@string/login_script"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>