<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="1dp"
    android:background="#99000000">

    <ImageView
        android:id="@+id/image_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_checkbox_history_checked" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout30"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="25dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:text="2018.01.12 TUE"
                android:textAlignment="textStart"
                android:textColor="@color/a01_text_dark_bright"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:layout_weight="0.8"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:scaleType="fitCenter"
                android:textAlignment="center"
                app:srcCompat="@drawable/ic_home_basiccount_jump" />

            <TextView
                android:id="@+id/text_row"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="2"
                android:fontFamily="@font/roboto_medium"
                android:text="1"
                android:textColor="@color/a01_text_normal"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_jumps"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/roboto_light"
                android:text="32,210"
                android:textAlignment="textEnd"
                android:textColor="@color/a01_text_normal"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:paddingLeft="4dp"
                android:text="Jumps"
                android:textAlignment="textStart"
                android:textColor="@color/a01_text_dark_bright"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_calories"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/roboto_light"
                android:text="32,210"
                android:textAlignment="textEnd"
                android:textColor="@color/a01_text_normal"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:paddingLeft="4dp"
                android:text="Calories"
                android:textAlignment="textStart"
                android:textColor="@color/a01_text_dark_bright"
                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>