<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="model"
            type="kr.tangram.smartgym.ui.main.map.gym.GymViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_challenge"
    android:layout_marginStart="@dimen/margin_side_20dp"
    android:layout_marginEnd="@dimen/margin_side_20dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_challenge_top_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/item_round_top_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/civ_challenge_marker"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="14dp"
        android:src="@drawable/ic_default_profile"
        app:civ_border_width="0dp"

        app:layout_constraintBottom_toBottomOf="@+id/iv_challenge_top_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_challenge_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:padding="5dp"
        android:background="@drawable/item_round_all_blue"


        android:text="신규 첼린지"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_round_bottom_light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_challenge_top_image" >


        <TextView
            android:id="@+id/tv_challenge_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_challenge_margin_side_16dp"
            android:layout_marginEnd="@dimen/item_challenge_margin_side_16dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="레드불과 줄넘기 챌린지!"
            android:textColor="@color/color_both_1"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_challenge_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/item_challenge_margin_side_16dp"
            android:layout_marginEnd="@dimen/item_challenge_margin_side_16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="방내용ㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁdasdad12312312asdasda"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_challenge_header" />


        <TextView
            android:id="@+id/tv_challenge_period"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="@dimen/item_challenge_margin_side_16dp"
            android:layout_marginEnd="@dimen/item_challenge_margin_side_16dp"
            android:drawableStart="@drawable/ic_group"
            android:text="22. 03. 01 ~ 22. 03. 07"
            android:textColor="@color/color_both_1"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_challenge_content" />

        <TextView
            android:id="@+id/tv_challenge_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_challenge_margin_side_16dp"
            android:layout_marginEnd="@dimen/item_challenge_margin_side_16dp"
            android:layout_marginTop="5dp"
            android:drawableStart="@drawable/ic_group"
            android:text="마포구 상암동"
            android:textColor="@color/color_both_1"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_challenge_period" />



        <TextView
            android:id="@+id/tv_challenge_joined_user_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_challenge_margin_side_16dp"
            android:layout_marginEnd="@dimen/item_challenge_margin_side_16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:text="전체 103,304명 참여중"
            android:textColor="@color/color_both_1"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_challenge_location" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>